<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>Blazor Extensions Popper</Title>
    <Description>Popper.js wrapper implementation for ASP.NET Core Blazor.</Description>
    <PackageId>KristofferStrube.Blazor.Popper</PackageId>
    <PackageVersion>0.1.0</PackageVersion>
  </PropertyGroup>

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <BlazorLinkOnBuild>false</BlazorLinkOnBuild>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="wwwroot\KristofferStrube.Blazor.popper.js" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\KristofferStrube.Blazor.popper.js">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.6" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="**\*.razor">
      <Pack>false</Pack>
    </Content>
  </ItemGroup>
</Project>
